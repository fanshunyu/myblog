<%- include('./layout/header.ejs') %>

  <h1>文章列表</h1>

  <div class="list-group" style="margin: 10px;">
    <% articles.forEach(item => { %>
      <a href="/article/info/<%= item.id %>" class="list-group-item">
        <%= item.title %>
        <span class="badge" style="background-color: #5bc0de;"><%= item.ctime %></span>
        <!-- <span class="badge" style="background-color: #f0ad4e;"><%= item.nickname %></span> -->
      </a>
      <% }) %>
  </div>


